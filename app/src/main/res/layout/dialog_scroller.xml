<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_radius_top_10dp_ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/shape_radius_top_10dp_ffffff"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/theme_333333"
                android:textSize="@dimen/sp_14"
                android:text="获取渠道"/>

            <ImageView
                android:id="@+id/closeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/black_close_x"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_EEEEEE"/>
        <com.zhongyiguolian.zy.myview.scllor_view.UnitPicker
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:itemTextColor="@color/theme_333333"
            app:selectedTextColor="@color/theme_EF5B48"
            app:wheelCurtainColor="@color/theme_F5F6FB"
            app:wheelCurtainBorder="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingEnd="16dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/theme_EEEEEE"/>
            <TextView
                android:id="@+id/submit"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/theme_FFFFFF"
                android:text="确认"
                android:background="@drawable/shape_radius5_5690ff"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
