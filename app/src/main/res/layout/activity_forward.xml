<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.zhongyiguolian.zy.ui.advisory.viewmodel.ForwardViewModel" />

        <import type="android.view.View"/>
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhongyiguolian.zy.myview.StatusBarHeightView
                android:id="@+id/barHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/theme_FFFFFF"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:text="转发"/>
                <ImageView
                    android:id="@+id/comBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/white_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"/>
            </RelativeLayout>


            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true" >
                <com.zhongyiguolian.zy.myview.StickyScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="60dp">

                        <EditText
                            android:id="@+id/editContent"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:hint="说说分享心得..."
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/theme_333333"
                            android:gravity="top"
                            android:padding="16dp"
                            android:background="@null"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="#EFEFEF">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:src="@mipmap/delete_hyzs_img"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/theme_333333"
                                        android:textSize="@dimen/sp_12"
                                        android:text="\@"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/theme_333333"
                                        android:textSize="@dimen/sp_12"
                                        android:text="王大锤"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/theme_333333"
                                    android:textSize="@dimen/sp_10"
                                    android:layout_marginTop="4dp"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:layout_marginEnd="4dp"
                                    android:text="在真正读懂比特币白皮书的瞬间，我的感觉是无法用文字来形容的..."/>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </com.zhongyiguolian.zy.myview.StickyScrollView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/theme_FFFFFF"
            android:gravity="center"
            android:background="@drawable/shape_radius5_5690ff"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:text="立即发布"/>
    </FrameLayout>

</layout>