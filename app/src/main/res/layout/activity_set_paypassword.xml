<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.zhongyiguolian.zy.ui.person.viewmodel.SetPayPasswordViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhongyiguolian.zy.myview.StatusBarHeightView
            android:id="@+id/barHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/theme_FFFFFF"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:text="设置支付密码"/>
            <ImageView
                android:id="@+id/comBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_black"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:text="新支付密码"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_333333"
                android:background="@null"
                android:hint="请输入6位数字支付密码"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/eye_close_mark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_EEEEEE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="确认新支付密码"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_333333"
                android:background="@null"
                android:hint="请输入6位数字支付密码"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/eye_close_mark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_EEEEEE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_333333"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="验证码"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_333333"
                android:background="@null"
                android:inputType="number"
                android:hint="请输入新登录密码"/>

            <Button
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/theme_FFFFFF"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/shape_radius5_5690ff"
                android:text="发送"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_EEEEEE"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:textColor="@color/theme_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_radius5_5690ff"
            android:layout_marginTop="50dp"
            android:text="提交"/>
    </LinearLayout>

</layout>