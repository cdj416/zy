<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.zhongyiguolian.zy.ui.person.viewmodel.InviteViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_7EA8FF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/invite_logo"
            android:scaleType="fitXY"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhongyiguolian.zy.myview.StatusBarHeightView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/theme_FFFFFF"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:text="邀请好友"/>
                <ImageView
                    android:id="@+id/comBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/white_black"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        android:background="@mipmap/home_top_sroll_bg">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/speaker_mark"
                            android:layout_marginRight="4dp"/>

                        <com.sunfusheng.marqueeview.MarqueeView
                            android:id="@+id/marqueeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mvAnimDuration="1000"
                            app:mvDirection="bottom_to_top"
                            app:mvInterval="3000"
                            app:mvTextColor="@color/theme_333333"
                            app:mvTextSize="9sp"
                            app:mvSingleLine="true"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_FFFFFF"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="未来已来，你来不来"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="18dp"
                            android:layout_height="2dp"
                            android:background="@color/theme_FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_FFFFFF"
                            android:textSize="@dimen/sp_15"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:text="错过了阿里云，不要错过国链云"/>

                        <View
                            android:layout_width="18dp"
                            android:layout_height="2dp"
                            android:background="@color/theme_FFFFFF"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginStart="51dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_radius6_ffffff"
                            android:alpha="0.6"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/theme_333333"
                                android:text="我的邀请码："/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_15"
                                android:textColor="#2F5EFB"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginEnd="80dp"
                                android:text="@{viewModel.entity.invite_code}"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="#003BFF"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:text="复制邀请码"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginStart="51dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_radius6_ffffff"
                            android:alpha="0.6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/theme_333333"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginEnd="80dp"
                            android:text="@{viewModel.entity.invite_link}"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="#003BFF"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:text="复制链接"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:src="@mipmap/delet_qr_img"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_FFFFFF"
                        android:textSize="@dimen/sp_11"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="二维码注册下载"/>

                </LinearLayout>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/theme_5690FF"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:background="@drawable/shape_radius6_ffffff"
                android:text="分享海报"
                app:onClickCommand="@{viewModel.openShare}"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="28dp"
                android:background="@drawable/shape_radius6_000000_stroke_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_radius6_ffffff"
                    android:layout_margin="1dp"
                    android:alpha="0.1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/theme_FFFFFF"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    android:background="@null"
                    android:text="保存海报"/>
            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>

</layout>