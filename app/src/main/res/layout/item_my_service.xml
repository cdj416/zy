<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.zhongyiguolian.zy.ui.person.viewmodel.MyServicelItemViewModel" />

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:visibility="@{viewModel.isFirst ? View.VISIBLE : View.GONE}"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/shadow_bg"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                android:background="@drawable/shape_radius6_ffffff">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:riv_corner_radius="6dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/delelet_home_item_img"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    tools:ignore="RtlCompat">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_333333"
                        android:textSize="@dimen/sp_13"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="国链云·太湖l号云存储服务器"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_333333"
                        android:textSize="@dimen/sp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="5dp"
                        android:text="购买时间:2020-10-31 12:58:31"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_666666"
                        android:textSize="@dimen/sp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="5dp"
                        android:text="到期时间:2021-11-03 00:00:00"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_333333"
                            android:textSize="@dimen/sp_10"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="累计产量:0.670157"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0606"
                            android:textSize="@dimen/sp_10"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="托管费续费"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_333333"
                        android:textSize="@dimen/sp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="5dp"
                        android:text="设备编号:12832008131459585930"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>



</layout>
